<%- include('../partials/head')  %>
<br>
<h1>Editando la película: <%= movie.title %> </h1>
<section class="formulario">
<form action="/movies/edit/<%= movie.id %>?_method=PUT" method="POST">
	<div>
    <label>Título:</label><br>
    <input type="text" name="title">
    <br><br>
  </div>
  <div>
    <label>Calificación:</label><br>
    <input type="text" name="rating">
    <br><br>
  </div>
  <div>
    <label>Premios:</label><br>
    <input type="text" name="awards">
    <br><br>
  </div>
  <div>
    <label>Fecha de estreno:</label><br>
    <input type="date" name="release_date">
    <br><br>
  </div>
  <div>
    <label>Duración:</label><br>
    <input type="text" name="length">
    <br><br>
  </div>
  <div>
    <label>Género:</label><br>
    <select name="genre_id">
      <% genres.forEach(oneGenre => { %>
      <option value="<%= oneGenre.id %>"><%= oneGenre.name %></option>
      <% }) %>
    </select>
    <br><br>
  </div>
  <div>
    <label>Actores que participan:</label><br>
    <input type="text" name="length">
    <br><br>
  </div>
  <div> 
    <button class="botonAgregar" type="submit">Guardar</button>
      <button class="botonCancelar"type="submit">Cancelar</button>
      <a class="botonVolver" href="/">inicio</a>
    </div>
       
<%- include('../partials/footer')  %>

